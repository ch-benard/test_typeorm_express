{
   "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "target": "es6",
       "noImplicitAny": true,
       "strict": false,
       "moduleResolution": "node",
       "resolveJsonModule": true,
       "sourceMap": true,
       "outDir": "dist",
       "baseUrl": ".",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "paths": {
           "*": [
               "node_modules/*"
           ]
       }
   },
   "include": [
       "src/**/*"
   ]
}